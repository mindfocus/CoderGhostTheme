<header class="container-fluid cover
{{#is "index,home"}}


    {{#if @site.cover_image}}" style="background-image: url({{cover_image}})
    {{else}}default-cover
    {{/if}}
{{else}}
    {{#is "author"}}
        {{#if cover_image}}" style="background-image: url({{cover_image}})
        {{else}}no-cover
        {{/if}}
    {{else}}
        {{#if feature_image}}" style="background-image: url({{feature_image}})
        {{else}}no-cover
        {{/if}}
    {{/is}}
{{/is}}">
    <div class="navbar" role="navigation">
        <div class="container">
            <div class="pull-left">
                <a class="{{#if @site.logo}}btn navbar-btn{{else}}navbar-brand{{/if}}" href="{{@site.url}}">
                    {{#if @site.logo}}
                        <img src="{{@site.logo}}" alt="Blog Logo"/>
                    {{/if}}
                    <span class="hidden-xs">&nbsp;{{@site.title}}</span>
                </a>
            </div>
            <div class="pull-right">
                <a class="btn navbar-btn" href="{{@site.url}}/rss/"><i class="fa fa-rss"></i> Subscribe</a>
                &nbsp;
                <!--<form class="navbar-btn pull-right hidden-xs" autocomplete="off">
                    <input id="search-field" type="text"  placeholder="Search article"/>
                </form>-->
            </div>
        </div>
    </div>
</header>